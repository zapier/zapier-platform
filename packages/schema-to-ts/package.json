{
  "name": "zapier-schema-to-ts",
  "version": "0.1.0",
  "description": "Converts zapier-platform-schema JsonSchema definitions to TypeScript types",
  "author": "Thomas Cranny <thomas.cranny@zapier.com>",
  "license": "SEE LICENSE IN LICENSE",
  "main": "dist/cli.js",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "generate-platform-types": "node ./dist/cli.js --schema-json ../schema/exported-schema.json",
    "generate-platform-types:build": "yarn build && yarn generate-platform-types"
    ,"foo": "yarn schema-to-ts"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "deepmerge": "^4.3.1",
    "json-schema-to-typescript": "^13.1.2",
    "marked": "^12.0.2",
    "pino": "^9.1.0",
    "pino-pretty": "^11.0.0",
    "prettier": "^3.2.5",
    "word-wrap": "^1.2.5"
  },
  "devDependencies": {
    "typescript": "^5.5.2",
    "vitest": "^1.5.0"
  }
}
